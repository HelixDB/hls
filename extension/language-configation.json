{
    "comments": {
      "lineComment": "//"
    },
    "brackets": [
      ["{", "}"],
      ["[", "]"],
      ["(", ")"],
      ["<", ">"]
    ],
    "autoClosingPairs": [
      { "open": "{", "close": "}" },
      { "open": "[", "close": "]" },
      { "open": "(", "close": ")" },
      { "open": "<", "close": ">" },
      { "open": "\"", "close": "\"" },
      { "open": "|", "close": "|" }
    ],
    "surroundingPairs": [
      ["{", "}"],
      ["[", "]"],
      ["(", ")"],
      ["<", ">"],
      ["\"", "\""],
      ["|", "|"]
    ],
    "folding": {
      "offSide": true,
      "markers": {
        "start": "^\\s*//\\s*#?region\\b",
        "end": "^\\s*//\\s*#?endregion\\b"
      }
    },
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
    "indentationRules": {
      "increaseIndentPattern": "^\\s*.*[\\{\\[]\\s*$",
      "decreaseIndentPattern": "^\\s*[\\}\\]].*$"
    }
  }